<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.pokedexapp.ui.home.ListFragment"
        android:label="@string/title_list"
        tools:layout="@layout/fragment_pokemon_list" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.pokedexapp.ui.dashboard.FavoritesFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/fragment_favorites" />

    <!-- ✅ Detail destination managed by NavController -->
    <fragment
        android:id="@+id/navigation_detail"
        android:name="com.example.pokedexapp.ui.notifications.DetailFragment"
        android:label="@string/title_detail"
        tools:layout="@layout/fragment_detail">
        <!-- optional: declare the arg (not required if you’re not using Safe Args) -->
        <argument
            android:name="name_or_id"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

</navigation>
